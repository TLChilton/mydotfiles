set record = "+[Gmail]/Sent Mail"
set postponed = '+[Gmail]/Drafts'
set trash = '+[Gmail]/Trash'
set my_saved = '+Saved'

# LOCAL FOLDERS FOR CACHED HEADERS AND CERTIFICATES
set header_cache = ~/.mutt/school_gmail/cache/headers
set message_cachedir = ~/.mutt/school_gmail/cache/bodies
set certificate_file = ~/.mutt/school_gmail/certificates

# SMTP SETTINGS
